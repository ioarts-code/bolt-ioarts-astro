---
import Layout from '../layouts/Layout.astro';
import { supabase, isPlaceholder, type Post } from '../lib/supabase';

let posts: Post[] | null = null;
let error = null;

// Only attempt to fetch if we have real Supabase credentials
if (!isPlaceholder) {
  const { data, error: fetchError } = await supabase
    .from('posts')
    .select('*')
    .order('created_at', { ascending: false });
  
  posts = data;
  error = fetchError;
}
---

<Layout>
  <main class="container">
    <header class="header">
      <h1 class="site-title">Creative Portfolio</h1>
      <p class="site-description">Gaming, Music & Digital Art Collection</p>
    </header>

    {isPlaceholder ? (
      <div class="setup-notice">
        <div class="setup-card">
          <h2>ðŸš€ Connect Your Database</h2>
          <p>Click "Connect to Supabase" in the top right to set up your database and view the imported posts.</p>
        </div>
      </div>
    ) : (
      <section class="posts">
        {posts?.map((post: Post) => (
          <article class="post-card">
            <div class="post-image">
              <img src={post.image_url} alt={post.title} loading="lazy" />
            </div>
            <div class="post-content">
              <h2 class="post-title">
                <a href={`/posts/${post.slug}`}>{post.title}</a>
              </h2>
              <p class="post-excerpt">
                {post.content.length > 120 ? post.content.substring(0, 120) + '...' : post.content}
              </p>
              <div class="post-meta">
                <time class="post-date">
                  {new Date(post.created_at).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </time>
                {post.link_two_title && (
                  <span class="post-category">{post.link_two_title}</span>
                )}
              </div>
            </div>
          </article>
        ))}
      </section>
    )}
  </main>
</Layout>

<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: 100vh;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
  }

  .site-title {
    font-size: 3rem;
    font-weight: 800;
    margin: 0 0 0.5rem 0;
    color: #1a1a1a;
    letter-spacing: -0.02em;
  }

  .site-description {
    font-size: 1.125rem;
    color: #666;
    margin: 0;
    font-weight: 400;
  }

  .setup-notice {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 300px;
  }

  .setup-card {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 12px;
    padding: 3rem;
    text-align: center;
    max-width: 500px;
  }

  .setup-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: #1a1a1a;
  }

  .setup-card p {
    color: #666;
    margin: 0;
    line-height: 1.6;
  }

  .posts {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: white;
    border: 1px solid #e9ecef;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    border-color: #d1d5db;
  }

  .post-image {
    aspect-ratio: 16/10;
    overflow: hidden;
    background: #f8f9fa;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.02);
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .post-title a {
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title a:hover {
    color: #4f46e5;
  }

  .post-excerpt {
    color: #666;
    line-height: 1.5;
    margin: 0 0 1rem 0;
    font-size: 0.95rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    font-size: 0.875rem;
  }

  .post-date {
    color: #888;
    font-weight: 500;
  }

  .post-category {
    background: #f1f5f9;
    color: #475569;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-weight: 500;
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
    
    .site-title {
      font-size: 2.25rem;
    }
    
    .header {
      margin-bottom: 2rem;
    }
    
    .posts {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
</Layout>