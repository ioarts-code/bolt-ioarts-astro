---
import Layout from '../layouts/Layout.astro';
import { supabase, type Post } from '../lib/supabase';

let posts: Post[] | null = null;
let error = null;

try {
  const { data, error: fetchError } = await supabase
    .from('posts')
    .select('*')
    .order('created_at', { ascending: false });
  
  posts = data;
  error = fetchError;
  
  console.log('Posts fetched:', posts?.length || 0);
  if (error) {
    console.error('Supabase error:', error);
  }
} catch (e) {
  console.error('Supabase fetch error:', e);
  error = e;
}
---

<Layout>
  <main class="container">
    <header class="header">
      <h1 class="title">ioarts</h1>
      <p class="subtitle">Creative digital art & design</p>
    </header>

    {error && (
      <div class="error-message">
        <p>Error loading posts: {error.message || 'Unknown error'}</p>
      </div>
    )}

    {!posts || posts.length === 0 ? (
      <div class="no-posts">
        <p>No posts found. Check your database connection or ensure posts exist in your database.</p>
      </div>
    ) : (
    <section class="grid">
      {posts?.map((post: Post) => (
        <article class="card">
          <a href={`/posts/${post.slug}`} class="card-link">
            <div class="image-container">
              <img src={post.image_url} alt={post.title} loading="lazy" />
            </div>
            <div class="content">
              <h3 class="post-title">{post.title}</h3>
              <p class="post-excerpt">
                {post.content.length > 80 ? post.content.substring(0, 80) + '...' : post.content}
              </p>
              <div class="meta">
                <time class="date">
                  {new Date(post.created_at).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                {post.link_two_title && (
                  <span class="tag">{post.link_two_title}</span>
                )}
              </div>
            </div>
          </a>
        </article>
      ))}
    </section>
    )}
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    min-height: 100vh;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .title {
    font-size: 2.5rem;
    font-weight: 300;
    margin: 0 0 0.5rem 0;
    color: #111;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1rem;
    color: #666;
    margin: 0;
    font-weight: 400;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .card {
    background: white;
    border: 1px solid #eee;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    border-color: #ddd;
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .image-container {
    aspect-ratio: 4/3;
    overflow: hidden;
    background: #f8f8f8;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    background: #f8f8f8;
    transition: transform 0.3s ease;
  }

  .card:hover .image-container img {
    transform: scale(1.02);
  }

  .content {
    padding: 1.25rem;
  }

  .post-title {
    font-size: 1rem;
    font-weight: 500;
    margin: 0 0 0.5rem 0;
    color: #111;
    line-height: 1.3;
  }

  .post-excerpt {
    color: #666;
    font-size: 0.85rem;
    line-height: 1.4;
    margin: 0 0 1rem 0;
  }

  .meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    font-size: 0.8rem;
  }

  .date {
    color: #999;
    font-weight: 400;
  }

  .tag {
    background: #f5f5f5;
    color: #666;
    padding: 0.2rem 0.5rem;
    border-radius: 12px;
    font-weight: 400;
    font-size: 0.75rem;
  }

  .error-message {
    text-align: center;
    padding: 2rem;
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .error-message p {
    color: #dc2626;
    margin: 0;
  }

  .no-posts {
    text-align: center;
    padding: 3rem 1rem;
    color: #666;
  }

  @media (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }
    
    .title {
      font-size: 2rem;
    }
    
    .header {
      margin-bottom: 2.5rem;
    }
    
    .grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }
    
    .content {
      padding: 1rem;
    }
    
    .post-title {
      font-size: 0.9rem;
    }
    
    .post-excerpt {
      font-size: 0.8rem;
    }
  }
</style>
</Layout>