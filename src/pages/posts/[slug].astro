---
import Layout from '../../layouts/Layout.astro';
import { supabase, type Post } from '../../lib/supabase';

const { slug } = Astro.params;

if (!slug) {
  throw new Error('Slug parameter is required');
}

let post = null;
let error = null;

const { data, error: fetchError } = await supabase
  .from('posts')
  .select('*')
  .eq('slug', slug)
  .single();

post = data;
error = fetchError;

if (error || !post) {
  throw new Error(`Post not found: ${slug}`);
}

export async function getStaticPaths() {
  const { data: posts } = await supabase
    .from('posts')
    .select('slug');
  
  return posts?.map((post) => ({
    params: { slug: post.slug },
  })) || [];
}
---

<Layout>
  <main class="container">
    <nav class="breadcrumb">
      <a href="/" class="back-link">‚Üê Back to Posts</a>
    </nav>

    <article class="post">
      <header class="post-header">
        <div class="post-image">
          <img src={post.image_url} alt={post.title} />
        </div>
        <div class="post-header-content">
          <h1 class="post-title">{post.title}</h1>
          <div class="post-meta">
            <time class="post-date">
              {new Date(post.created_at).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            {post.link_two_title && (
              <span class="post-category">{post.link_two_title}</span>
            )}
          </div>
        </div>
      </header>

      <div class="post-content">
        <div class="content-text">
          {post.content.split('\n').map(paragraph => (
            <p>{paragraph}</p>
          ))}
        </div>
      </div>

      {(post.link_one_title || post.link_two_title || post.link_three_title) && (
        <footer class="post-footer">
          <div class="post-links">
            {post.link_one_title && post.link_one_url && (
              <a href="https://www.deviantart.com/ioartseu" class="post-link" target="_blank" rel="noopener noreferrer">
                Buy Vector
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            )}
            {post.link_two_title && post.link_two_url && (
              <a href={post.link_two_url} class="post-link" target="_blank" rel="noopener noreferrer">
                {post.link_two_title}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            )}
            {post.link_three_title && post.link_three_url && (
              <a href={post.link_three_url} class="post-link" target="_blank" rel="noopener noreferrer">
                {post.link_three_title}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            )}
          </div>
        </footer>
      )}
    </article>
  </main>
</Layout>

<style>
