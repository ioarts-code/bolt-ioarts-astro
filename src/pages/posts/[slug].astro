  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.95rem;
  }

  .post-date {
    color: #666;
    font-weight: 500;
  }

  .post-category {
    background: #f1f5f9;
    color: #475569;
    padding: 0.375rem 1rem;
    border-radius: 20px;
